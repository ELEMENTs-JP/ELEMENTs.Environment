

<header style="@(((IsSticky == true) ? " position: sticky; top: 0px; z-index:1; " : ""))" class="@HeaderCSS">
    <div class="row d-flex align-items-center">
        @if (LogoContent != null)
        {
            <div class="col-auto">@LogoContent</div>
        }

        <div class="col">
            <h3 class="h3">@Title</h3>
        </div>

        @if (NavigationContent != null)
        {
            <div class="col">@NavigationContent</div>
        }

        @if (SearchContent != null)
        {
            <div class="col-auto">@SearchContent</div>
        }

        @if (SecurityContent != null)
        {
            <div class="col-auto">@SecurityContent</div>
        }
    </div>
</header>

@code {

    [Parameter]
    public RenderFragment LogoContent { get; set; }

    [Parameter]
    public RenderFragment NavigationContent { get; set; }

    [Parameter]
    public RenderFragment SearchContent { get; set; }

    [Parameter]
    public RenderFragment SecurityContent { get; set; }

    [Parameter]
    public string Title { get; set; } = "Title of the website";

    [Parameter]
    public string HeaderCSS { get; set; } = "bg-light border-bottom px-5 py-3";

    [Parameter]
    public bool IsSticky { get; set; } = true;

}
