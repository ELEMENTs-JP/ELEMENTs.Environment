
@if (Repository != null)
{
<div class="border bg-white p-3">

    <div class="row">

        @foreach (EditField field in Repository.Fields)
        {
            <div class="@field.ColumnCSSClass">
                <EditComponent Field="@field" />
            </div>
        }

    </div>
</div>
}
else
{ 
    <p>Repository is empty</p>
}


@code {

    [Parameter]
    public IEditInterfaceRepository Repository { get; set; }

}
