


<span class="@ControlCSS">@Value.ToSecureString()</span>

@code {
    /// <summary>
    /// Defines or sets a CSS class that controls the CSS style of the control.
    /// </summary>
    [Parameter]
    public string ControlCSS { get; set; } = "fs-6";

    /// <summary>
    /// Defines or sets the value of the Value property of the control.
    /// The property is initialized with "string.Empty".
    /// </summary>
    [Parameter]
    public string Value { get; set; } = string.Empty;
}
