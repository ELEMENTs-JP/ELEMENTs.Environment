

    @Header


<div class="container">
    @ChildContent
</div>

@if (Footer != null)
{
    <div class="@FooterCSS">
        @Footer
    </div>
}

@code {

    [Parameter]
    public RenderFragment Header { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public string FooterCSS { get; set; } = "footer container-flex bg-light";

}