@page "/tabler"

<div class="row">
    <div class="col">
        <h3 class="h1">Controls</h3>
    </div>
</div>

<div class="row">
    <div class="col p-3">
        <ELEMENTS.Controls.Text.Display>this is a Tabler.IO Display 3</ELEMENTS.Controls.Text.Display>
        <ELEMENTS.Controls.Text.Heading>this is a Tabler.IO Heading h3</ELEMENTS.Controls.Text.Heading>
        <ELEMENTS.Controls.Text.Label>this is a Tabler.IO Label</ELEMENTS.Controls.Text.Label>
